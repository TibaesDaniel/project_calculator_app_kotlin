<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/previusView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginEnd="15sp"
        android:layout_marginTop="15sp"
        android:singleLine="true"
        android:text="450 + 350 + 2"
        android:gravity="end"
        android:ellipsize="start"
        android:textColor="@color/txtOperation"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/currentView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="15sp"
        android:ellipsize="start"
        android:gravity="end"
        android:maxLines="1"
        android:text="540"
        android:textColor="@color/white"
        android:textSize="70sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.8"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/clear"
            style="@style/ACDEL"
            android:text="AC"/>

        <TextView
            android:id="@+id/delete"
            style="@style/ACDEL"
            android:text="DEL"/>

        <TextView
            android:id="@+id/porcent"
            style="@style/operator_keys"
            android:text="%"/>

        <TextView
            android:id="@+id/division"
            style="@style/operator_keys"
            android:text="/"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_seven"
            style="@style/number_keys"
            android:text="7"/>
        <TextView
            android:id="@+id/number_eight"
            style="@style/number_keys"
            android:text="8"/>
        <TextView
            android:id="@+id/number_nine"
            style="@style/number_keys"
            android:text="9"/>
        <TextView
            android:id="@+id/multiplication"
            style="@style/operator_keys"
            android:text="X"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="15dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_four"
            style="@style/number_keys"
            android:text="4"/>
        <TextView
            android:id="@+id/number_five"
            style="@style/number_keys"
            android:text="5"/>
        <TextView
            android:id="@+id/number_six"
            style="@style/number_keys"
            android:text="6"/>
        <TextView
            android:id="@+id/subtraction"
            style="@style/operator_keys"
            android:text="-"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number_one"
            style="@style/number_keys"
            android:text="1"/>
        <TextView
            android:id="@+id/number_two"
            style="@style/number_keys"
            android:text="2"/>
        <TextView
            android:id="@+id/number_three"
            style="@style/number_keys"
            android:text="3"/>
        <TextView
            android:id="@+id/addition"
            style="@style/operator_keys"
            android:text="+"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginHorizontal="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addDouble"
            style="@style/number_keys"
            android:text="++"/>
        <TextView
            android:id="@+id/number_zero"
            style="@style/number_keys"
            android:text="0"/>
        <TextView
            android:id="@+id/point"
            style="@style/number_keys"
            android:text="."/>
        <TextView
            android:id="@+id/equal"
            style="@style/operator_keys"
            android:text="="/>
    </LinearLayout>
</LinearLayout>